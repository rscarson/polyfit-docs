---
const { title, path } = Astro.props;
export const sidebarLinks = [
    { label: 'Home', path: '/', icon: 'house-door' },
    { label: 'Features', path: '/features', icon: 'stars' },
    { label: 'Glossary', path: '/glossary', icon: 'lightbulb' },
    { label: 'Recipes', path: '/recipes', icon: 'journal-bookmark' },
    { label: 'Testing', path: '/testing', icon: 'check-circle' },
];

//import "highlight.js/styles/default.min.css";
//import "highlight.js/styles/atom-one-dark.min.css";
---

<!DOCTYPE html>
<html lang="en">

<head>
    <script>
        const userPrefersDark = window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches;
        const savedTheme = document.cookie.split('; ').find(row => row.startsWith('theme='))?.split('=')[1];
        const theme = savedTheme || (userPrefersDark ? 'dark' : 'light');
        document.documentElement.setAttribute('data-bs-theme', theme);
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} :: Polyfit</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link id="theme-stylesheet" rel="stylesheet" href="/src/css/theme.css" />
    <link rel="stylesheet" href="/src/css/main.css" />
    
    <link id="highlight-css" rel="stylesheet" href="/node_modules/highlight.js/styles/default.min.css" />

    <!-- Main UI font Montserrat -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@600;700&display=swap" rel="stylesheet">

    <!-- Fira Code for code blocks -->
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">

    <script type="module" src="/src/js/main.js"></script>
    <script type="module" src="/src/js/theme.js"></script>
</head>

<body>
    <div class="container-fluid d-flex p-0">
        <nav class="d-md-flex flex-column flex-shrink-0 navbar-expand-lg">
            <a href="/" class="mb-4 p-3 bg-white rounded shadow-sm d-flex align-items-center">
                <img src="/logo.png" alt="Polyfit Logo" style="height: 50px;" class="me-2">
                <h2 class="m-0 sidebar-logo">Polyfit</h2>
            </a>

            <ul class="list-unstyled mb-auto">
            {sidebarLinks.map(link => (
                <li class="mb-2">
                    <a href={link.path} class={path === link.path ? 'sidebar-link active' : 'sidebar-link'}>
                        <i class={`bi bi-${link.icon} me-2`}></i>
                        {link.label}
                    </a>
                </li>
            ))}
            </ul>

            <hr>
            <div class="d-flex flex-column gap-2">
                <a href="https://github.com/your-repo/polyfit" class="btn btn-outline-primary btn-sm" target="_blank"><i
                        class="bi bi-github me-2"></i> GitHub</a>
                <a href="https://docs.rs/polyfit" class="btn btn-outline-primary btn-sm" target="_blank"><i
                        class="bi bi-book me-2"></i> Docs.rs</a>
                <a href="https://crates.io/crates/polyfit" class="btn btn-outline-primary btn-sm" target="_blank"><i
                        class="bi bi-box-seam me-2"></i> Crates.io</a>
            </div>

            <hr />

            <!-- Theme dropdown -->
            <div class="dropdown mb-4">
                <button class="btn btn-sm dropdown-toggle w-100" type="button" id="themeDropdown"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Theme
                </button>
                <ul class="dropdown-menu" aria-labelledby="themeDropdown">
                    <li><a class="dropdown-item theme-btn" data-theme="light">Light</a></li>
                    <li><a class="dropdown-item theme-btn" data-theme="dark">Dark</a></li>
                </ul>
            </div>

            <div class="mt-auto text-center small text-muted">
                &copy; 2025 Richard Carson. All rights reserved.
            </div>
        </nav>

        <!-- Main content -->
        <div class="flex-grow-1 overflow-auto p-4" id="app">
            <!-- Mobile hamburger -->
            <button id="sidebarToggle" class="btn btn-outline-dark d-lg-none float-end">
            <i class="bi bi-list"></i>
            </button>
            
            <!-- Page-specific content goes here -->
            <slot />
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
        crossorigin="anonymous"></script>
</body>

</html>